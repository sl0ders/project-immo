<table cellpadding="0" cellspacing="0" width="100%" border="0">
    <tr>
        <td>Prenom</td>
        <td>{{ contact.firstname }}</td>
    </tr>
    <tr>
        <td>Nom</td>
        <td>{{ contact.lastname }}</td>
    </tr>
    <tr>
        <td>Telephone</td>
        <td>{{ contact.phone }}</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>{{ contact.email }}</td>
    </tr>
    <tr>
        <td>Message</td>
        <td>{{ contact.message | nl2br }}</td>
    </tr>
</table>
